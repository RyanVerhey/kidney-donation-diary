<div class="article-list-item">
  <div class="article-title">
    <h3><%= link_to article.title, article %></h3>
    <span><%= article.date.strftime('%B %e, %Y') %></span>
  </div>
  <div class="article-summary">
    <%= article.summary(100) %>
    <div class="gradient"></div>
  </div>
  <hr/>
</div>
